{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/wav-track", "destination": "/wav-track/index.html" },
    { "source": "/wav-track/(.*)", "destination": "/wav-track/index.html" }
  ],
  "headers": [
    {
      "source": "/wav-track/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/wav-track/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
} 